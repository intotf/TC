@inject IOptions<WebConfig> config
@{
    var webConfig = config.Value;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@webConfig.SystemName</title>
    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/bootstrap/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/lib/ValidBox/validBox.css" rel="stylesheet" />
        <link href="~/lib/MvcPager/page.css" rel="stylesheet" />
        <link href="~/css/fix.css" rel="stylesheet" />
        <link href="~/css/custom.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">TC.Web</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <partial name="_CookieConsentPartial" />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@string.Format(webConfig.CopyRight, DateTime.Today.Year)</p>
        </footer>
    </div>
    <environment include="Development">
        <script src="~/js/jqueryV2.2.3.min.js"></script>
        <script src="~/lib/ValidBox/validBox.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap/vendors/toastr/toastr.min.js"></script>
        <script src="~/lib/MvcPager/search.js"></script>
        <script src="~/lib/MvcPager/MvcPager.js"></script>
        <script src="~/js/Uri.js"></script>
        <script src="~/js/tc.js"></script>
        <script src="~/js/custom.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
