@inject IOptions<WebConfig> config
@{
    var webConfig = config.Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@webConfig.SystemName</title>
    <link href="~/favicon.ico" rel="shortcut icon" />
    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/bootstrap/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/lib/ValidBox/validBox.css" rel="stylesheet" />
        <link href="~/lib/MvcPager/page.css" rel="stylesheet" />
        <link href="~/css/fix.css" rel="stylesheet" />
        <link href="~/css/custom.css" rel="stylesheet" />
    </environment>
</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@Url.Action("center", "system")" class="site_title">
                            <img src="~/images/logo.png" style="width: 34px; float: left;margin-left:0px;" alt="..." class="img-circle profile_img" /><span style="float: left;line-height: 2.5em;font-size:16px; margin-top:20px;">@webConfig.SystemName</span>
                        </a>
                    </div>
                    <div class="clearfix"></div>
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <ul class="nav side-menu">
                                <li>
                                    <a>
                                        <i class="fa fa-gear"></i>系统管理
                                        <span class="fa fa-chevron-down"></span>
                                    </a>

                                    <ul class="nav child_menu">
                                        <li>
                                            <a href="/sysconfig">系统配置</a>
                                        </li>
                                        <li>
                                            <a href="/upgrade">升级管理</a>
                                        </li>
                                        <li>
                                            <a href="/dbbackup">数据备份</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a>
                                        <i class="fa fa-home"></i>基础数据
                                        <span class="fa fa-chevron-down"></span>
                                    </a>

                                    <ul class="nav child_menu">
                                        <li>
                                            <a href="/roomstruct">房间结构</a>
                                        </li>
                                        <li>
                                            <a href="/organize">组织机构</a>
                                        </li>
                                        <li>
                                            <a href="/userinfo">系统账号</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a>
                                        <i class="fa fa-tablet"></i>设备管理
                                        <span class="fa fa-chevron-down"></span>
                                    </a>

                                    <ul class="nav child_menu">
                                        <li>
                                            <a href="/entrancemachine">门口机/门禁</a>
                                        </li>
                                        <li>
                                            <a href="/roomentrancemachine">户门口机</a>
                                        </li>
                                        <li>
                                            <a href="/callingmachine">保安机</a>
                                        </li>
                                        <li>
                                            <a href="/indoormachine">室内机</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a>
                                        <i class="fa fa-user"></i>用户管理
                                        <span class="fa fa-chevron-down"></span>
                                    </a>

                                    <ul class="nav child_menu">
                                        <li>
                                            <a href="/house">用户列表</a>
                                        </li>
                                        <li>
                                            <a href="/card">门卡列表</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a>
                                        <i class="fa fa-bullhorn"></i>公告管理
                                        <span class="fa fa-chevron-down"></span>
                                    </a>

                                    <ul class="nav child_menu">
                                        <li>
                                            <a href="/announcement">公告管理</a>
                                        </li>
                                        <li>
                                            <a href="/announcementpublish">发布记录</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a>
                                        <i class="fa fa-reorder"></i>日志管理
                                        <span class="fa fa-chevron-down"></span>
                                    </a>

                                    <ul class="nav child_menu">
                                        <li>
                                            <a href="/alarmlog">报警日志</a>
                                        </li>
                                        <li>
                                            <a href="/unlocklog">开锁日志</a>
                                        </li>
                                        <li>
                                            <a href="/intercomlog">对讲日志</a>
                                        </li>
                                        <li>
                                            <a href="/linelog">离线日志</a>
                                        </li>
                                        <li>
                                            <a href="/imalarmlog">安防报警</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" href="javascript:void(0);">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" onclick="launchFullscreen(document.documentElement)" title="全屏">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" href="@Url.Action("center", "system")" title="回到首页">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="退出系统" href="@Url.Action("logout", "home")">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">

                <div class="nav_menu">
                    <nav class="" role="navigation">
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img src="~/images/header.jpg" /> Admin
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li>
                                        <a href="@Url.Action("myinfo", "userinfo")"><i class="fa fa-edit pull-right"></i>个人资料</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("logout", "home")"><i class="fa fa-sign-out pull-right"></i>退出系统</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>

            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                @RenderBody()
                <div class="clearfix"></div>
            </div>
            <!-- /page content -->
            <div class="clearfix"></div>
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    <span>@string.Format(webConfig.CopyRight, DateTime.Today.Year)</span>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <environment include="Development">
        <script src="~/js/jqueryV2.2.3.min.js"></script>
        <script src="~/lib/ValidBox/validBox.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap/vendors/toastr/toastr.min.js"></script>
        <script src="~/lib/MvcPager/search.js"></script>
        <script src="~/lib/MvcPager/MvcPager.js"></script>
        <script src="~/js/Uri.js"></script>
        <script src="~/js/tc.js"></script>
        <script src="~/js/custom.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>