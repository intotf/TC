@inject IOptions<WebConfig> config
@{
    Layout = null;
    var webConfig = config.Value;
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@webConfig.SystemName</title>
    <link href="~/favicon.ico" rel="shortcut icon" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/vendors/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body style="background: #F7F7F7;">
    <div class="">
        <a class="hiddenanchor" id="toregister"></a>
        <a class="hiddenanchor" id="tologin"></a>

        <div id="wrapper">
            <div id="login" class=" form">
                <section class="login_content">
                    <form id="LoginForm">
                        <h1>@webConfig.SystemName</h1>
                        <input name="refer" type="hidden" value="" />
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <input type="text" class="form-control has-feedback-left" name="Account" placeholder="账号">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <input type="password" class="form-control has-feedback-left" name="Password" placeholder="密码">
                            <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-9 col-sm-6 col-xs-12 form-group has-feedback">
                            <input type="text" class="form-control has-feedback-left" name="Code" placeholder="验证码">
                            <span class="fa fa-qrcode form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12 form-group has-feedback" style="text-align:right">
                            <img src="/home/validateCode" onclick="this.src = '/home/validateCode?r=' + Math.random()" id="codeImg" style="height:34px;width:60px;border:0px;" />
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <button id="LoginBtn" type="button" onclick="login(this); return false;" class="btn  btn-success">登 录</button>
                        </div>
                        <div class="clearfix"></div>
                        <div class="control-group">
                            <span class="message" style="color:red;font-size:13px;"></span>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <p>@string.Format(webConfig.CopyRight, DateTime.Today.Year)</p>
                                <p>建议使用浏览器IE9+，谷歌浏览器，火狐浏览器</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <script src="~/js/jqueryV2.2.3.min.js"></script>
    <script src="~/lib/bootstrap/vendors/toastr/toastr.min.js"></script>
    <script src="~/lib/layer/layer.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>
